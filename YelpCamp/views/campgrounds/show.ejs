<% layout('/layouts/boilerplate') %>

<div class="row">
  <div class="col-6 offset-3">
    <div class="card">
  <img src="https://media.cntraveler.com/photos/607313c3d1058698d13c31b5/16:9/w_1920,c_limit/FamilyCamping-2021-GettyImages-948512452-2.jpg" class="card-img-top" alt="">
  <div class="card-body">
    <h5 class="card-title"><%=campground.title %></h5>
    <p class="card-text"><%=campground.description %></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item-muted"><%= campground.location%></li>
    <li class="list-group-item">$<%=campground.price %>/night</li> 
    <li class="list-group-item">A third item</li>
  </ul>
  <div class="card-body mb-3">
    <a class="card-link btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
     <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
         <button class="btn btn-info">Delete</button>
        </form>
  </div>
</div>
<div class="card-footer text-muted">
    2 days ago
  </div>
  </div>
</div>


      
